<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="setono_sylius_gift_card_plugin.api.upload_gift_card_configuration_image"
                 class="Setono\SyliusGiftCardPlugin\Api\Controller\Action\UploadGiftCardConfigurationImageAction">
            <argument type="service" id="setono_sylius_gift_card.factory.gift_card_configuration_image" />
            <argument type="service" id="setono_sylius_gift_card.repository.gift_card_configuration_image" />
            <argument type="service" id="sylius.image_uploader" />
            <argument type="service" id="api_platform.iri_converter" />

            <tag name="controller.service_arguments" />
        </service>

        <service id="setono_sylius_gift_card_plugin.api.resend_gift_card_email"
                 class="Setono\SyliusGiftCardPlugin\Api\Controller\Action\ResendGiftCardEmailAction">
            <argument type="service" id="setono_sylius_gift_card.email_manager.gift_card_order" />

            <tag name="controller.service_arguments" />
        </service>

        <service id="setono_sylius_gift_card_plugin.api.download_gift_card_pdf"
                 class="Setono\SyliusGiftCardPlugin\Api\Controller\Action\DownloadGiftCardPdfAction">
            <argument type="service" id="setono_sylius_gift_card.provider.gift_card_configuration" />
            <argument type="service" id="setono_sylius_gift_card.renderer.gift_card_pdf" />

            <tag name="controller.service_arguments" />
        </service>

        <service id="setono_sylius_gift_card.controller.action.get_balance"
                 class="Setono\SyliusGiftCardPlugin\Api\Controller\Action\GiftCardBalanceAction">
            <argument type="service" id="setono_sylius_gift_card.repository.gift_card"/>

            <tag name="controller.service_arguments" />
        </service>
    </services>
</container>
