<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Setono\SyliusGiftCardPlugin\Model\GiftCardConfiguration">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">code</option>
            <option name="groups">setono_sylius_gift_card</option>
        </constraint>
        <constraint name="Setono\SyliusGiftCardPlugin\Validator\Constraints\HasBackgroundImage">
            <option name="groups">
                <value>setono_sylius_gift_card</value>
            </option>
        </constraint>

        <property name="code">
            <constraint name="NotBlank">
                <option name="groups">setono_sylius_gift_card</option>
            </constraint>
            <constraint name="Length">
                <option name="max">255</option>
                <option name="groups">setono_sylius_gift_card</option>
            </constraint>
        </property>
        <property name="channelConfigurations">
            <constraint name="Valid">
                <option name="groups">setono_sylius_gift_card</option>
            </constraint>
        </property>
        <property name="images">
            <constraint name="Valid">
                <option name="groups">setono_sylius_gift_card</option>
            </constraint>
        </property>
        <property name="defaultValidityPeriod">
            <constraint name="Setono\SyliusGiftCardPlugin\Validator\Constraints\DatePeriod">
                <option name="groups">setono_sylius_gift_card</option>
            </constraint>
        </property>
        <property name="orientation">
            <constraint name="Setono\SyliusGiftCardPlugin\Validator\Constraints\Pdf\ValidOrientation">
                <option name="groups">setono_sylius_gift_card</option>
            </constraint>
        </property>
        <property name="pageSize">
            <constraint name="Setono\SyliusGiftCardPlugin\Validator\Constraints\Pdf\ValidPageSize">
                <option name="groups">setono_sylius_gift_card</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
